			+header()

			.room-details-section

				+room-gallery("url(../img/gallery_img1.png);", "url(../img/gallery_img2.png);", "url(../img/gallery_img3.png);")

				.container
					.room-details-section__content

							.room-details-section__room-information

								.room-details-section__qualities

									.room-details-section__benefits
										h2 Сведения о номере
										+benefits(
											['face-icons, gradient-color-text', '&#xe24e;', 'Комфорт', 'Шумопоглощающие стены'],
