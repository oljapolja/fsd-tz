include ../button/button
include ../input-text/input-text
include ../radio-button/radio-button
include ../toggle-button/toggle-button
include ../account-existance/account-existance
form.accaunt-registration-form(id="registration")
    h1 Регистрация аккаунта
    +input-text('', "name", "Имя", "name-id")
    +input-text('', "family-name", "Фамилия", "family-name-id")
    +radio-button(['male-id','male','sex','Мужчина', true],
        ['female-id','female','sex','Женщина'])
    +input-text('Дата рождения', "birthday", "дд.мм.гггг", "birthday-id", 'birthday-masked-input')
    +input-text('Данные для входа в сервис', "email", "Email", "email-id")
    +input-text('', "password", "Пароль", "password-id")
    +toggle-button("recive-suggestion-id", "recive-suggestion", 'Получать спецпредложения')
    +button('Перейти к оплате <i class="material-icons arrow-forward-icon"> &#xe5c8;</i>', 'purpule-button long-button')
   
    +account-existance('Уже есть аккаунт на Toxin', '<span> Войти </span>', 'sign_in.html')




